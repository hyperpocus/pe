create TABLE	Character
	(
		ID PRIMARY KEY
		,NOME		varchar2
		,RAZZA		varchar2
		,DES		number
		,SAG		number
		,INT		number
		,COS		number
		,CAR		number
		,FOR		number
		,VITA		number
		,VELOCITA	number
		,PERC_PASS	number
		,INVENTARIO	number
	)
;





[CORTECCIA][ELFO DEI BOSCHI][LADRO]

ATTRIBUTI
-----------------------------------------------------------------------------
